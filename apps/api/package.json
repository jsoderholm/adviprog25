{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/client.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down --remove-orphans",
    "db:reset": "pnpm db:down --volumes && docker volume prune -f && rm -rf db-data",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "@hono/zod-openapi": "^1.1.0",
    "@scalar/hono-api-reference": "^0.9.18",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.5",
    "hono-pino": "^0.10.2",
    "openmeteo": "^1.2.1",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "resend": "^6.1.0",
    "stoker": "^2.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5"
  }
}
